<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:include filename="$(find udarm_description)/description/material.xacro"/>
    <xacro:include filename="$(find udarm_description)/description/inertial_macros.xacro"/>
    <xacro:include filename="$(find udarm_description)/description/udarm_transmission.xacro"/>
    
    <link name="world" />

    <joint name="base_joint" type="fixed">
        <parent link="world"/>
        <child link="base_link" />
        <origin xyz="0 0 1" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="base_link">
        <inertial>
            <mass value="0.001" />
            <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01" />
        </inertial>
    </link>

    <joint name="joint1" type="revolute">
        <parent link="base_link"/>
        <child link="link1" />
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-1.5" upper="3.14" effort="1000" velocity="0.5"/>
    </joint>

    <link name="link1">
        <collision>
            <origin xyz="0.1 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.2 0.015 0.015"/>
            </geometry>
        </collision>

        <visual>
            <origin xyz="0.1175 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.235 0.015 0.015"/>
            </geometry>
            <material name="orange"/>
        </visual>

        <xacro:inertial_box mass="0.3" x="0.1" y="0.015" z="0.015">
            <origin xyz="0.2 0 0" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference='link1'>
        <material>
            Gazebo/Orange
        </material>
    </gazebo>

    <joint name="joint2" type="revolute">
        <parent link="link1"/>
        <child link="link2" />
        <origin xyz="0.235 0.015 0" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-1.5" upper="3" effort="1000" velocity="0.5"/>
    </joint>

    <link name="link2">
        <collision>
            <origin xyz="0.1 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.2 0.015 0.015"/>
            </geometry>
        </collision>

        <visual>
            <origin xyz="0.11 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.22 0.015 0.015"/>
            </geometry>
            <material name="white"/>
        </visual>

        <xacro:inertial_box mass="0.3" x="0.22" y="0.015" z="0.015">
            <origin xyz="0.11 0 0" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference='link2'>
        <material>
            Gazebo/White
        </material>
    </gazebo>

    <joint name="joint3" type="revolute">
        <parent link="link2"/>
        <child link="link3" />
        <origin xyz="0.22 0.0 0" rpy="-${pi/2} -${pi/2} 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-1.5" upper="3.15" effort="1000" velocity="0.5"/>
    </joint>

    <link name="link3">

        <collision>
            <origin xyz="0.06 0.04625 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.015 0.1075 0.015"/>
            </geometry>
        </collision>

        <visual>
            <origin xyz="0.02625 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.0525 0.015 0.015"/>
            </geometry>
            <material name="orange"/>
        </visual>

        <visual>
            <origin xyz="0.06 0.04625 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.015 0.1075 0.015"/>
            </geometry>
            <material name="orange"/>
        </visual>

        <xacro:inertial_box mass="0.3" x="0.015" y="0.1075" z="0.015">
            <origin xyz="0.06 0.04625 0" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference='link3'>
        <material>
            Gazebo/Orange
        </material>
    </gazebo>

    <joint name="eef_joint" type="fixed">
        <parent link="link3"/>
        <child link="eef" />
        <origin xyz="0.06 0.1 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="eef">
        <inertial>
            <mass value="0.001" />
            <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01" />
        </inertial>
    </link>


</robot>